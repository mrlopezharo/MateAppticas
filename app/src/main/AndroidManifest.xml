    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name=".dashboardTres"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".dashboardDos"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".dashboardUno"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".Instrucciones"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".EjercicioTerminado"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".resultados"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".MalaRacha"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".EjercicioTipo4"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".EjercicioTipo3"
            android:theme="@style/EjercicioTheme" />
        <activity
            android:name=".EjercicioTipo2"
            android:theme="@style/EjercicioTheme" />
